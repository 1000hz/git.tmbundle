<pre>
  <%= @result[:text] %>
</pre>

<% unless @result[:conflicts].empty? %>
  <h2>Conflicts - resolve each of the following then commit:</h2>
  <% @result[:conflicts].each do |conflicted_file| %>
    <% full_path = File.join(git.git_base, conflicted_file) %>
    <div>
      <a href='txmt://open?url=file://<%= e_url full_path %>'><%= conflicted_file %></a>
    </div>
  <% end %>
<% end %>
